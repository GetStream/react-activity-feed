{
  "include": ["./src"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "./src/gatsby-theme-docz",
    "node_modules"
  ],
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true, // TODO: remove once SDK is fully in TS
    "noEmit": false,
    "noEmitOnError": false,
    "target": "ES5",
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
